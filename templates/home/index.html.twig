{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

{#    Message flash#}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice alert alert-warning alert-dismissible fade show" role="alert">
            <p class="mb-0">{{ message }}</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}



{% if app.user is not null %}



<a href="{{ path('notify') }} " class="btn btn-primary">Notify</a>


{% else %}

<p>you have to be authenticated to receive a notification</p>

<a href="{{ path('app_register') }} " class="btn btn-outline-primary">Sign in </a><br>
<a href="{{ path('app_login') }} " class="btn btn-primary">Log in</a>

{% endif %}






{% endblock %}
